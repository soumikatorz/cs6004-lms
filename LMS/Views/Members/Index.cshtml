@model PagedList.IPagedList<LMS.Models.Member>
@using PagedList.Mvc

@{
    ViewBag.Title = "Member";
	ViewBag.TitleSmall = "All";
}

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                <a class="btn btn-primary pull-right" href="@Url.Action("Create")"><i class="fa fa-plus"></i> Add</a>
            </div>
            <div class="row">
                <div class="col-sm-4" style="margin-left: 12px; margin-top:18px">
                    <div class="input-group add-on">
                        <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2 pull-right" style="margin-right:10px">
                    Sort
                    <select class="form-control">
                        <option id="1">Alphabetically</option>
                    </select>
                </div>
            </div>
            <div class="box-body">
                <table class="table table-bordered">
					<thead>
						<tr>
							<th>
								Membership Type
							</th>
							<th>
								First Name
							</th>
							<th>
								Middle Name
							</th>
							<th>
								Last Name
							</th>
							<th>
								@Html.DisplayNameFor(model => model.FirstOrDefault().DateOfBirth)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.FirstOrDefault().Address)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.FirstOrDefault().PhoneNumber)
							</th>
                            <th>
                                Active Loans
                            </th>
                            <th>
                                Total Loans Allowed
                            </th>
							<th>
								@Html.DisplayNameFor(model => model.FirstOrDefault().LastUpdatedBy)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.FirstOrDefault().LastUpdated)
							</th>
							<th></th>
						</tr>
					</thead>
					<tbody>

						@foreach (var item in Model) {
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.Membership.Name)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.FirstName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.MiddleName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.LastName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.DateOfBirth)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Address)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.PhoneNumber)
								</td>
                                <td>

                                </td>
                                <td>

                                </td>
								<td>
									@Html.DisplayFor(modelItem => item.LastUpdatedBy)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.LastUpdated)
								</td>
								<td>
									<a class="btn btn-primary btn-sm" href="@Url.Action("Edit", new { id=item.ID })"><i class="fa fa-edit"> </i> Edit</a>
									<a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id=item.ID })"><i class="fa fa-trash"> </i> Delete</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
			<div class="box-footer clearfix">
                <div class="pull-right">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
		</div>
	</div>
</div>
