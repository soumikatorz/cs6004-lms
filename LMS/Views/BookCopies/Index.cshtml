@model PagedList.IPagedList<LMS.Models.BookCopy>
@using PagedList.Mvc

@{
    ViewBag.Title = "Book Copy";
	ViewBag.TitleSmall = "All";
}

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                <a class="btn btn-primary pull-right" href="@Url.Action("Create")"><i class="fa fa-plus"></i> Add</a>
                <div class="col-sm-4 pull-left" style="margin-left:-15px">
                    <div class="input-group add-on">
                        <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <table class="table table-bordered">
					<thead>
						<tr>
							<th>
								Book Name
							</th>
							<th>
								Publisher Name
							</th>
							<th>
								Author Name
							</th>
							<th>
								Copy Number
							</th>
							<th>
								Location
							</th>
							<th>
								Available
							</th>
							<th>
								Last Updated By
							</th>
							<th>
								Last Updated On
							</th>
							<th></th>
						</tr>
					</thead>
					<tbody>

						@foreach (var item in Model) {
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.Book.Name)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Publisher.Name)
								</td>
								<td>
									@{
										foreach (var author in item.Authors)
										{
											@: @author.FirstName @author.MiddleName @author.LastName br />
										}
									}
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.CopyNumber)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Location)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Available)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.LastUpdatedBy)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.LastUpdated)
								</td>
								<td>
									<a class="btn btn-primary btn-sm" href="@Url.Action("Edit", new { id=item.ID })"><i class="fa fa-edit"> </i> Edit</a>
									<a class="btn btn-secondary btn-sm" href="@Url.Action("Details", new { id=item.ID })"><i class="fa fa-info"> </i> Details</a>
									<a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id=item.ID })"><i class="fa fa-trash"> </i> Delete</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
			<div class="box-footer clearfix">
                <div class="pull-right">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
		</div>
	</div>
</div>
